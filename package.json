{
  "name": "desko-bifrost",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "node ace serve --watch",
    "build": "node ace build --production",
    "start": "pm2 node build/server.js --name deskbee-gateway",
    "lint": "eslint . --ext=.ts",
    "format": "prettier --write .",
    "exposer": "ngrok http 3000 --subdomain=lencina",
    "generate:executable": "npx link node-windows &&  npx pkg build/desko-secureId-windows-service.js",
    "update": "pm2 stop all && git pull && npm run build && pm2 restart all"
  },
  "devDependencies": {
    "@adonisjs/assembler": "^5.3.7",
    "adonis-preset-ts": "^2.1.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-adonis": "^1.3.3",
    "eslint-plugin-prettier": "^4.0.0",
    "pino-pretty": "^7.0.1",
    "prettier": "^2.4.1",
    "typescript": "^4.2.4",
    "youch": "^2.2.2",
    "youch-terminal": "^1.1.1"
  },
  "dependencies": {
    "@adonisjs/core": "^5.3.4",
    "@adonisjs/lucid": "^16.1.0",
    "axios": "^0.21.4",
    "dotenv": "^16.0.3",
    "git-url-parse": "^11.6.0",
    "glob": "^7.2.0",
    "luxon": "^2.0.2",
    "mysql": "^2.18.1",
    "mysql2": "^2.3.0",
    "node-schedule": "^2.0.0",
    "node-windows": "^1.0.0-beta.8",
    "proxy-addr": "^2.0.7",
    "reflect-metadata": "^0.1.13",
    "source-map-support": "^0.5.20",
    "sqlite3": "^5.0.2",
    "ssl-root-cas": "^1.3.1"
  },
  "bin": "buildserver.js",
  "pkg": {
    "scripts": "build/**/*.js",
    "assets": "views/**/*",
    "targets": [
      "node14-linux-arm64"
    ],
    "outputPath": "dist"
  }
}
